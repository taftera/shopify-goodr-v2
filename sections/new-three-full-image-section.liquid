<section id="section-{{ section.id }}" class="containter--full full-image-section">
  	<div class="container--fluid">
		<div class="row">
          	<div class="col-xs-12 col-md-12">
              	{%- if section.settings.title != blank -%}
              	<h2 class="h3 section__heading text-align--center"><span>{{ section.settings.title }}</span></h2>
              	{%- endif -%}
          	</div>
      	</div>
  	</div>
  
	{%- if section.settings.image_1 != blank -%}
		<div class="image-slide{% if section.settings.mobile_image_1 != blank %} mb_image{% endif %}{% if section.settings.enable_zoom_1 != blank %} img-hover-zoom{% endif %}">
			<a {% if section.settings.image_1_url != blank %} href="{{ section.settings.image_1_url }}" {% if template.name == "index" %} onclick="gtag('event', 'Click', { 'event_category': 'Home', 'event_label':'{{ section.settings.image_1_url }}', 'event_action':'Full Width Image 1' });" {% endif %}{% endif %}>
				<img class="desktop-image" src="{{ section.settings.image_1 | img_url: "master" }}"
				srcset="{{ section.settings.image_1 | img_url: "master" }} 1x, {{ section.settings.image_1 | img_url: "master", scale: 2 }} 2x"
				alt="{{ section.settings.image_1.alt | default: shop.name }}">
              	{%- if section.settings.mobile_image_1 != blank -%}
              	<img class="mobile-image" src="{{ section.settings.mobile_image_1 | img_url: "master" }}"
					srcset="{{ section.settings.mobile_image_1 | img_url: "master" }} 1x, {{ section.settings.mobile_image_1 | img_url: "master", scale: 2 }} 2x"
					alt="{{ section.settings.alt | default: shop.name }}">
              	{%- endif -%}
			</a>
		</div>
	{%- endif -%}
  	{%- if section.settings.image_2 != blank -%}
		<div class="image-slide{% if section.settings.mobile_image_2 != blank %} mb_image{% endif %}{% if section.settings.enable_zoom_2 != blank %} img-hover-zoom{% endif %}">
			<a {% if section.settings.image_2_url != blank %} href="{{ section.settings.image_2_url }}" {% if template.name == "index" %} onclick="gtag('event', 'Click', { 'event_category': 'Home', 'event_label':'{{ section.settings.image_2_url }}', 'event_action':'Full Width Image 2' });" {% endif %}{% endif %}>
				<img class="desktop-image" src="{{ section.settings.image_2 | img_url: "master" }}"
				srcset="{{ section.settings.image_2 | img_url: "master" }} 1x, {{ section.settings.image_2 | img_url: "master", scale: 2 }} 2x"
				alt="{{ section.settings.image_2.alt | default: shop.name }}">
              	{%- if section.settings.mobile_image_2 != blank -%}
              	<img class="mobile-image" src="{{ section.settings.mobile_image_2 | img_url: "master" }}"
					srcset="{{ section.settings.mobile_image_2 | img_url: "master" }} 1x, {{ section.settings.mobile_image_2 | img_url: "master", scale: 2 }} 2x"
					alt="{{ section.settings.alt | default: shop.name }}">
              	{%- endif -%}
			</a>
		</div>
	{%- endif -%}
  	{%- if section.settings.image_3 != blank -%}
		<div class="image-slide{% if section.settings.mobile_image_3 != blank %} mb_image{% endif %}{% if section.settings.enable_zoom_3 != blank %} img-hover-zoom{% endif %}">
			<a {% if section.settings.image_3_url != blank %} href="{{ section.settings.image_3_url }}" {% if template.name == "index" %} onclick="gtag('event', 'Click', { 'event_category': 'Home', 'event_label':'{{ section.settings.image_3_url }}', 'event_action':'Full Width Image 3' });" {% endif %}{% endif %}>
				<img class="desktop-image" src="{{ section.settings.image_3 | img_url: "master" }}"
				srcset="{{ section.settings.image_3 | img_url: "master" }} 1x, {{ section.settings.image_3 | img_url: "master", scale: 2 }} 2x"
				alt="{{ section.settings.image_3.alt | default: shop.name }}">
              	{%- if section.settings.mobile_image_3 != blank -%}
              	<img class="mobile-image" src="{{ section.settings.mobile_image_3 | img_url: "master" }}"
					srcset="{{ section.settings.mobile_image_3 | img_url: "master" }} 1x, {{ section.settings.mobile_image_3 | img_url: "master", scale: 2 }} 2x"
					alt="{{ section.settings.alt | default: shop.name }}">
              	{%- endif -%}
			</a>
		</div>
	{%- endif -%}
</section>

{% schema %}
  {
    "name": "New 3 Full Image",
    "settings": [
		{
        	"type": "text",
        	"id": "title",
        	"label": "Heading"
