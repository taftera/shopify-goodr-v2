		},
		{
			"type": "header",
			"content": "Image 2"
		},
		{
			"type": "image_picker",
			"id": "image_2",
			"label": "Image"
		},
		{
			"type": "image_picker",
			"id": "mobile_image_2",
			"label": "Mobile Image (optional)",
			"info": "Image size would be 600 x 500"
		},
		{
			"type": "url",
			"id": "image_2_url",
			"label": "URL"
		},
		{
			"type": "checkbox",
			"id": "enable_zoom_2",
			"label": "Enable Zoom Effects"
		},
		{
			"type": "header",
			"content": "Image 3"
		},
		{
			"type": "image_picker",
			"id": "image_3",
			"label": "Image"
		},
		{
			"type": "image_picker",
			"id": "mobile_image_3",
			"label": "Mobile Image (optional)",
			"info": "Image size would be 600 x 500"
		},
		{
			"type": "url",
			"id": "image_3_url",
			"label": "URL"
		},
		{
			"type": "checkbox",
			"id": "enable_zoom_3",
			"label": "Enable Zoom Effects"
		}
	],
    "presets": [
		{
			"name": "New 3 Full Image"
		}
	]
  }
{% endschema %}

<style>
#section-{{ section.id}} {
    padding: 40px 0px;
}
#section-{{ section.id}} .image-slide img {
  	display: grid;
  	width: 100%;
}
#section-{{ section.id}} .image-slide img.mobile-image {
  	display: none;
}
.full-image-section .section__heading {
    padding-bottom: 40px;
}
.img-hover-zoom {
  	overflow: hidden;
}
.img-hover-zoom img {
  	-webkit-transition: all 1.5s ease;
  	-moz-transition: all 1.5s ease;
  	-o-transition: all 1.5s ease;
  	transition: all 1.5s ease;
}
.img-hover-zoom:hover img {
  	transform: scale(1.1);
}
  
  
  
@media screen and (min-width: 1200px){
.full-image-section .container--fluid {
    padding: 0 4rem;
}
}
  
@media screen and (max-width: 767px){
#section-{{ section.id}} {
    padding: 30px 0px;
}
#section-{{ section.id}} .image-slide.mb_image img.desktop-image {
  	display: none;
}
#section-{{ section.id}} .image-slide img.mobile-image {
  	display: grid;
}
.full-image-section .section__heading {
    padding-bottom: 20px;
}
}
</style>