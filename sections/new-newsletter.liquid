{%- comment -%}
  This is a required section for the Shopify Theme Store.
  It is available when you add "Newsletter" section on the Theme Editor.

  Theme Store required settings
  - Heading: title of the newsletter section
  - Subheading: description of the newsletter section
{%- endcomment -%}
<section class="container newsletter-signup new-design">
  <div class="row pvs">
    <div class="col-xs-10 col-md-12 col-lg-12" style="margin: 0 auto;">
        {%- if section.settings.section_title != blank -%}
      		<h2 class="h3 section__heading text-align--center"><span>{{ section.settings.section_title }}</span></h2>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
          	<p class="text-align--center">{{ section.settings.subheading | escape }}</p>
        {%- endif -%}
      	{%- if section.settings.form_code != blank -%}
 			<div class="klaviyo-form-{{ section.settings.form_code }}"></div>
      	{%- endif -%}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "New Newsletter",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Heading",
        "default": "Subscribe to our newsletter"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "A short sentence describing what someone will receive by subscribing"
      },
	  {
        "type": "text",
        "id": "form_code",
        "label": "klaviyo Form Code",
        "info": "ex: Q2fUFs"
      }
    ],
    "presets": [{
      "name": "New Newsletter",
      "category": "Promotional"
    }]
  }
{% endschema %}

<style>
.newsletter-signup.new-design .needsclick {
    display: block !important;
    width: 100%;
    box-sizing: border-box !important;
}  
</style>