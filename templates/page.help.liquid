<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
      <h1 class="page__title">{{ page.title }}</h1>

      <div class="rte">
        {{ page.content }}
      </div>

    </div>

    <div class="col-xs-12">

      <div class="tab-menu">
        <ul class="make-tabs">
          {% for link in linklists.help.links %}
              <li>
                <a href="#{{ link.object.handle }}">
                  {{ link.title }}
                </a>
              </li>
          {% endfor %}
        </ul>

        {% for link in linklists.help.links %}
          <div class="tab-content" id="{{ link.object.handle }}">
            <div class="row center-xs">
              <div class="col-xs-12 col-md-10">
                <div class="rte">
                  {{ link.object.content }}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

    </div>
  </div>
</div>
